@model IEnumerable<SecuringApps.Application.ViewModels.StudentTaskViewModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    @foreach (var task in Model)
    {
<div class="col-md-4">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@task.Name</h5>
            <h6 class="card-title">@task.Description</h6>
            <p class="card-title">@task.Deadline</p>
            <a href="StudentWork/Create?id=@task.Id" class="btn btn-primary">Submit Work</a>
   </div>
    </div>
</div>}
</body>
</html>
