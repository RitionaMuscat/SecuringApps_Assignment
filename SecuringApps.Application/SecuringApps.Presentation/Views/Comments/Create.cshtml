@model CreateCommentsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Comments</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Comments.comment" class="control-label"></label>
                    <input asp-for="Comments.comment" class="form-control" />
                    <span asp-validation-for="Comments.comment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Task Name</label>
                    <select asp-for="Comments.StudentWork.Id" class="form-control">
                        @foreach (var task in Model.StudentWork)
                        {
                            <option value="@task.Id">@task.StudentTask.Description</option>
                        }
                    </select>
                    <span asp-validation-for="Comments.StudentWork.Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
